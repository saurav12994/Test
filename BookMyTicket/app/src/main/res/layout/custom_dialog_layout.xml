<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TabHost01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Many Seats ?"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"/>

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="41dp">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ScrollView android:id="@+id/ScrollView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/TextView01"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cycl" />

            </ScrollView>

            <ScrollView android:id="@+id/ScrollView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/TextView02"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/scooter" />

            </ScrollView>
            <ScrollView android:id="@+id/ScrollView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/TextView03"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/auto" />

            </ScrollView>
            <ScrollView android:id="@+id/ScrollView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/TextView04"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/car" />


            </ScrollView>
            <ScrollView android:id="@+id/ScrollView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/TextView05"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dow" />


            </ScrollView>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="150dp"
        android:textColor="#080808" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.150"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="147dp"
        android:textColor="#88e794" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Proceed"
        android:layout_marginTop="290dp"
android:id="@+id/proceed"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#2133d6" />
</TabHost>